{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "strict": true,
    "declaration": true, // 只有declaration设置为true才能生成.d.ts后缀的文件
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@": ["src"],
      "@/*": ["./src/*", "*"]
    },
    "typeRoots": ["typings", "node_modules/@types"]
  },
  "include": [".dumirc.ts", "src/**/*", "src/utils", "src/types/common.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "build/**/*"
  ]
}


